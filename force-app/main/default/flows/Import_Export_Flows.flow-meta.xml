    <description>Use this Flow to Import and Export Flows between Orgs</description>
    <formulas>
        <name>fFileName</name>
        <dataType>String</dataType>
        <expression>&quot;FLOW__&quot; &amp; {!SelectFlow.selectedFlowApiName} &amp; &quot;.flow-meta.xml&quot;</expression>
    </formulas>
    <formulas>
        <name>fFlowAPIName</name>
        <dataType>String</dataType>
        <expression>IF(LEFT({!FlowFileUpload.fileNames},7)=&quot;[FLOW__&quot;,
MID({!FlowFileUpload.fileNames},8,LEN({!FlowFileUpload.fileNames})-22),
MID({!FlowFileUpload.fileNames},2,LEN({!FlowFileUpload.fileNames})-16))</expression>
    </formulas>
    <formulas>
        <name>fTestFlowFile</name>
        <dataType>Boolean</dataType>
        <expression>RIGHT({!FlowFileUpload.fileNames},15) = &quot;.flow-meta.xml]&quot;</expression>
    </formulas>
    <formulas>
        <name>fUserId</name>
        <dataType>String</dataType>
